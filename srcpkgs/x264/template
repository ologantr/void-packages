# Template file for 'x264'
pkgname=x264
version=20220601.3095
revision=1
_commit="baee400fa9ced6f5481a728138fed6e867b0ff7f"
wrksrc="x264-${_commit}"
build_style=gnu-configure
configure_args="--enable-static --enable-shared"
hostmakedepends="nasm perl"
short_desc="Free library for encoding H264/AVC video streams"
maintainer="DirectorX <void.directorx@protonmail.com>"
license="GPL-2.0-or-later"
homepage="https://www.videolan.org/developers/x264.html"
distfiles="https://code.videolan.org/videolan/x264/-/archive/${_commit}/x264-${_commit}.tar.bz2"
checksum=ce6623b8b289765daee04a297c2fd1a293cb2565a1749c76d66c8d72c7ddc1ab

pre_configure() {
	case "$XBPS_TARGET_MACHINE" in
		armv5*|mips*|ppc*) configure_args+=" --disable-asm";;
		aarch64*|armv[67]*) export AS=$CC;;
		*) export AS=nasm;;
	esac
}

x264-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
	}
}
